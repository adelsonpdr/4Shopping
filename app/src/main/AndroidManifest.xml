<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adelson_pc.a4shopping">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher2"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SignUp"
            android:label="@string/title_sign_up"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.adelson_pc.a4shopping.SignUp" />
        </activity>
        <activity
            android:name=".ChangePassword"
            android:label="@string/title_change_password"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.adelson_pc.a4shopping.ChangePassword" />
        </activity>
        <activity android:name=".GroupList" />
        <activity
            android:name=".Lists"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".CreateNewList"
            android:label="@string/title_content_list"
            android:parentActivityName=".Lists"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.adelson_pc.a4shopping.Lists" />
        </activity>
        <activity
            android:name=".ListItems"
            android:label="@string/title_content_list"
            android:parentActivityName=".Lists"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.adelson_pc.a4shopping.Lists" />
        </activity>
        <activity
            android:name=".AddItem"
            android:label="@string/title_content_list"
            android:parentActivityName=".ListItems"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.adelson_pc.a4shopping.AddItem" />
        </activity>
        <activity
            android:name=".ListMembers"
            android:label="@string/title_content_list"
            android:parentActivityName=".ListItems"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.adelson_pc.a4shopping.ListMembers" />
        </activity>
        <activity
            android:name=".AddMemberList"
            android:label="@string/title_content_list"
            android:parentActivityName=".ListMembers"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.adelson_pc.a4shopping.ListItems" />
        </activity>
        <activity
            android:name=".ItemDetails"
            android:label="@string/title_content_list"
            android:parentActivityName=".ListItems"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.adelson_pc.a4shopping.ItemDetails" />
        </activity>
        <activity
            android:name=".EditItem"
            android:label="@string/title_content_list"
            android:parentActivityName=".ListItems"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.adelson_pc.a4shopping.EditItem" />
        </activity>


        <activity
            android:name=".Form2"
            android:label="@string/title_activity_form2"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>